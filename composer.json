{
    "name": "otobank/monolog-console-processor",
    "description": "",
    "keywords": ["monolog", "processor", "symfony"],
    "license": "MIT",
    "authors": [
        {
            "name": "Toshiyuki Fujita",
            "email": "tfujita@otobank.co.jp"
        }
    ],
    "require": {
        "php": ">=5.4",
        "monolog/monolog": "1.*",
        "symfony/event-dispatcher": "~2.8|~3.0|~4.0",
        "symfony/console": "~2.8|~3.0|~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "phpstan/phpstan": "^0.10",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Otobank\\Monolog\\Processor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otobank\\Monolog\\Processor\\": "tests/"
        }
    },
    "scripts": {
        "qa": [
            "@test",
            "@analyse",
            "@cs"
        ],
        "test" : [
            "phpunit"
        ],
        "analyse" : [
            "phpstan analyse -l max --no-progress src"
        ],
        "analyze" : [
            "@analyse"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run --diff"
        ]
    }
}
